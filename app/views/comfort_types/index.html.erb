<div class="row">
<div class="col-lg-8">
<div class="page-header">
	  <h1 id="tables">All comfort types </h1>
</div>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price per day</th>
      <th>Actions</th>      
    </tr>
  </thead>
  <tbody>
  <% idx = 0 %>	
  <% comfort_types.each do |comfort_type| %>
	  <% idx = idx + 1 %>
	  <% if(idx % 6 == 0) %>  
	  <% idx = 1 %>
	  <% end %>
	  <% if(idx % 5 == 0) %>
	  	<tr  class="active">
	  <% elsif(idx % 4 == 0) %>
	  	<tr  class="warning">
	  <% elsif(idx % 3 == 0) %>
	  	<tr  class="danger">
	  <% elsif(idx % 2 == 0) %>
	  	<tr  class="success">
	  <% elsif (idx % 1 == 0)%>		
	  	<tr  class="info">
	  <% end %>
      <td><a href="/comfort_types/<%= comfort_type.id %>" class="tlink">
	  <div class="td-link">
      	<%= comfort_type.name %>
      </div></a></td>	
      
      <td><a href="/comfort_types/<%= comfort_type.id %>" class="tlink">
	  <div class="td-link">
	  	<%= number_to_currency(comfort_type.price, :unit => "zÅ‚")%>
	  </div></a></td>
	  
      <td><%= link_to 'Show', comfort_type, :class => 'btn btn-success btn-xs' %>
      <%= link_to 'Edit', edit_comfort_type_path(comfort_type), :class => 'btn btn-info btn-xs' %>
      <%= link_to 'Destroy', comfort_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger  btn-xs' %>
      </td>      
    </tr>
  <% end %>   	
  </tbody>
</table>
<center>
</center>
<%= link_to 'New comfort type', new_comfort_type_path, :class => 'btn btn-primary' %>
</div> 
<div class="col-lg-4">
</div> 	
</div>

